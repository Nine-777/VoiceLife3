<div class="main post-main">
  <div class="post-container">
    <h1 class="form-heading">投稿する</h1>
    <div class="form">
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <%= form_for @post do |f| %>
        <p>テキスト</p>
        <%= f.text_area :content %>
        <p>音声</p>
        <%= f.file_field :file , :size => 140 %>
        <%= f.submit "送信" %>
      <% end %>
    </div>  
  </div>
</div>