<div class="post-main posts-index">
  <div style='text-align: center;'>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, value: @keyword , class: 'submit-bar' , :placeholder => "キーワード検索" %>
      <%= f.submit "検索" , class: 'submit-btn' %>
    <% end %>
  </div>
  <div class="post-container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-right">
          <div class="post-user-name">
            <%= image_tag post.user.avatar.url, class: 'user-image' %>
            <%= link_to(post.user.name, "/users/#{post.user.id}", style: "color: black;") %>
          </div> 
          <%= link_to(post.content, "/posts/#{post.id}", style: "color: black;") %>
        </div>
        <% if post.file.present? %> 
          <%= audio_tag post.file_url, :controls => true %>
        <% end %>
        <% if post.liked_users.count %>
          <i class="fas fa-heart unlike-btn" ></i>
        <% else %>
          <i class="fas fa-heart like-btn" ></i>
        <% end %>
        <%= post.liked_users.count %>
      </div>
    <% end %>
    <br>
    <%= paginate @posts %>
  </div>
</div>