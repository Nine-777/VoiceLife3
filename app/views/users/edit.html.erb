<div class="user-edit-main">
  <div class="user-edit-container">
    <div class="user-edit-item">
      <div class="user-edit-heading">
        <p>ユーザー情報の編集</p>
      </div>
      <div class="form users-form">
        <div class="form-body">
          <% @user.errors.full_messages.each do |message| %>            
            <div class="form-error">            
            <%= message %>            
            </div>            
          <% end %>
        <%= form_tag user_path(@user), method: :put, multipart: true do %>
          <p>ユーザー名</p>
          <input name="name" style="width: 300px;" value= "<%= @user.name %>">
          <p>プロフィール</p>
          <textarea name="profile" cols="45" rows="3"><%= @user.self_introduction %></textarea>
          <p>画像</p>
          <input name="avatar" type="file">
          <p>メールアドレス</p>
          <input name="email" style="width: 300px;" value="<%= @user.email %>">
          <input type="submit" value="保存" class= 'user-edit-btn'>
        <% end %>  
        </div>
    </div>
  </div>
</div>